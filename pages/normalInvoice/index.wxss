/* pages/normalInvoice/index.wxss */
page{
  background: #eee;
}
.wrapper{
  background: #fff;
  width: 100%;
  padding: 0 20rpx;
  margin-top:20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.item{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  flex: 2;
}
.right{
  flex: 8;
  text-align: right;
}
.left .icon{
  color: red;
  font-size: 40rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}
.right input{
  text-align: left;
}

.btn{
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
}
.btn .button{
  width: 100%;
  height: 100%;
  background: #07c160;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
  border-radius: 10rpx;
}