/* pages/login/index.wxss */
.img{
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img image{
  width: 200rpx;
  height: 200rpx;
}

.btn{
  width: 100%;
  height: 150rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.btn .button{
  background: #07c160;
  color: #fff;
  text-align: center;
  height: 100%;
  border-radius: 10rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  width: 100%;
  padding:0;
  font-weight: normal;
}

.note{
  font-size: 32rpx;
  color: #1296db;
  text-align: center;
}
