/* pages/freight/index.wxss */

.top-banner {
  position: relative;
  width: 100%;
  height: 600rpx;
  background: #eee;
}

.img {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.img text{
  position: absolute;
  width: 100rpx;
  height: 30rpx;
  color: #fff;
  top: 150rpx;
  left: 50rpx;
  font-weight: 550;
}
.img image {
  width: 100%;
  height: 100%;
}

.check {
  position: absolute;
  width: 90%;
  height: 50%;
  background: white;
  bottom: 20rpx;
  left: 40rpx;
  padding: 20rpx 20rpx 10rpx;
  box-sizing: border-box;
}

.cities {
  width: 100%;
  height: 70%;
  display: flex;
}

.departure-city {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.switch-button {
  flex: 1;
}

.arrive-city {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}

.cities .title {
  flex: 1;
  font-size: 22rpx;
  color: #bfbfbf;
  margin: 20rpx 0;
}

.cities .city-name {
  flex: 1;
  font-size: 36rpx;
  color: #2c2c2c;
  font-weight: 600;
  margin: 20rpx 0;
}

.cities .district {
  flex: 1;
  font-size: 26rpx;
  color: #8a8a8a;
  margin: 20rpx 0;
}

.switch-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-button image {
  width: 40rpx;
  height: 40rpx;
}

.btn {
  width: 100%;
  height: 30%;
}

.btn button {
  width: 100%;
  height: 100%;
  background-color: #07c160;
  color: #fff;
  font-weight: normal;
}

.hot-lines {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
}

.hot-lines .title {
  font-size: 26rpx;
}

.line-item {
  position: relative;
  width: 100%;
  height: 100rpx;
  background: #eee;
  margin: 10rpx 0 20rpx 0;
  border-radius: 5rpx;
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.round1, .round2 {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #fff;
  right: 130rpx;
}

.round1 {
  top: -5rpx;
}

.round2 {
  bottom: -5rpx;
}

.line-item .left, .line-item .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.left .line-name {
  display: flex;
  font-size: 28rpx;
}

.line-name image {
  width: 40rpx;
  height: 40rpx;
  transform: rotateX(180deg);
}

.line-note {
  font-size: 24rpx;
  background-color: #07c160;
  width: 80rpx;
  text-align: center;
}

.line-item .right {
  text-align: right;
  color: #07c160;
  font-size: 32rpx;
}

.cities-list{
  width: 100%;
  height: 1000rpx;
}


page{background-color: #efeff4;}
.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  overflow: hidden;
}